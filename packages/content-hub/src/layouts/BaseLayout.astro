---
import '../styles/global.css';
const {
  title = 'SimRigBuild Content Hub',
  description = 'Tools and knowledge for the perfect sim-racing setup',
} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />

		<!-- Tailwind base styles are injected by Astro/Vite pipeline -->
	</head>

        <body class="text-gray-900 antialiased">
                <div class="p-6 max-w-5xl mx-auto space-y-6">
                <!-- Site Header -->
<header class="flex items-center h-10 mb-2">
        <a
                        href="https://simrigbuild.com"
                        class="text-lg font-semibold text-blue-600 hover:text-blue-700 transition-colors"
                >
                        SimRigBuild.com
                </a>
                {title !== 'SimRigBuild' && (
                        <>
                                <span class="mx-2 text-gray-400">/</span>
                                <h1 class="text-lg font-medium">{title}</h1>
                        </>
                )}
</header>

                <!-- Main Content -->
                <main class="space-y-6">
                        <slot />
                </main>

                <!-- Site Footer -->
                <footer class="bg-gray-100 text-xs text-gray-500">
                        <div class="px-4 py-6 flex flex-col sm:flex-row justify-between">
                                <p>
                                        Â© {new Date().getFullYear()} <a href="/" class="hover:underline">SimRigBuild</a
                                        >. All rights reserved.
                                </p>
                                <p class="mt-2 sm:mt-0">
                                        Built with <a href="https://astro.build" target="_blank" class="underline">Astro</a
                                        > & <a href="https://tailwindcss.com" target="_blank" class="underline">Tailwind CSS</a>
                                </p>
                        </div>
                </footer>
                </div>
        </body>
</html>
