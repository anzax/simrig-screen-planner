{
  "name": "simrigbuild-hub",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:app": "pnpm --filter screen-planner dev",
    "dev:hub": "pnpm --filter content-hub dev",
    "build": "pnpm -r build",
    "build:app": "pnpm --filter screen-planner build",
    "build:hub": "pnpm --filter content-hub build",
    "test": "pnpm --filter screen-planner test",
    "lint": "pnpm --filter screen-planner lint",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "vitest": "^3.1.2",
    "eslint": "^9.22.0"
  }
}
